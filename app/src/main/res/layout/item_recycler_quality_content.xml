<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/shape_rectangle_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_quality_text_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:text="控制点编号：02.05.01"
            android:textColor="@color/new_black"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/item_quality_text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="控制点名称：超前注浆小导管单元工程质量等级评定表"
            android:textColor="@color/new_black"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/item_quality_text_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:text="控制点状态：未执行"
            android:textColor="@color/new_black"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/line" />

    </LinearLayout>

    <TextView
        android:id="@+id/item_quality_text_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_arc_rectangle"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="14dp"
        android:paddingTop="4dp"
        android:text="01"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/right" />

</RelativeLayout>