<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_2">

    <ImageView
        android:id="@+id/item_img_supervision"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:src="@color/rainbow_purple" />

    <TextView
        android:id="@+id/item_tv_supervision_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/item_img_supervision"
        android:text="标题标题标题标题标题标题标题标题"
        android:textColor="@color/big_black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/item_tv_supervision_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_img_supervision"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/item_img_supervision"
        android:text="张三"
        android:textColor="@color/middle_black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/item_tv_supervision_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_img_supervision"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:text="2018.06.06"
        android:textColor="@color/middle_black"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@+id/item_img_supervision"
        android:background="@color/line_wide" />


</RelativeLayout>