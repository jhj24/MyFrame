<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_executor_text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="10dp"
        android:ems="4"
        android:maxLines="1"
        android:textColor="@color/big_black"
        android:textSize="16sp" />
    <!-- 部门 -->
    <TextView
        android:id="@+id/item_executor_text_department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginTop="18dp"
        android:layout_toLeftOf="@+id/item_executor_radio"
        android:layout_toRightOf="@+id/item_executor_text_name"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="部门："
        android:textColor="@color/middle_black"
        android:textSize="14sp" />

    <!-- 单位 -->

    <TextView
        android:id="@+id/item_executor_text_unit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_executor_text_department"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/item_executor_radio"
        android:layout_toRightOf="@+id/item_executor_text_name"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="单位："
        android:textColor="@color/middle_black"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/item_executor_text_unit"
        android:layout_marginTop="16dp"
        android:background="@color/line_gray" />

    <RadioButton
        android:id="@+id/item_executor_radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:button="@drawable/radio_button_selector" />


</RelativeLayout>