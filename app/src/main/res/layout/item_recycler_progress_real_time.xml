<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="20dp"
    android:background="@color/white"
    app:cardCornerRadius="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/item_tv_progress_bids"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/big_black"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/item_message_second_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_tv_progress_bids"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="14dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_tv_progress_newspaper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="填报人："
                android:textColor="@color/big_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_tv_progress_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="日期："
                android:textColor="@color/big_black"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_tv_progress_remarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_message_second_layout"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="备注："
            android:textColor="@color/new_black"
            android:textSize="14sp" />

        <!-- line -->
        <View
            android:id="@+id/item_message_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/item_tv_progress_remarks"
            android:layout_marginTop="18dp"
            android:background="@color/line_gray" />


        <LinearLayout
            android:id="@+id/item_layout_message_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_message_line"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/item_tv_progress_see"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:padding="12dp"
                android:text="查看"
                android:textColor="@color/bids_4"
                android:textSize="14sp" />


            <View
                android:id="@+id/item_message_line_2"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/line_gray" />


            <TextView
                android:id="@+id/item_tv_progress_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:padding="12dp"
                android:text="删除"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />

        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>