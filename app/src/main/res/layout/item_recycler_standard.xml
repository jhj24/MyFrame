<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="0dp"
    android:background="@color/white"
    app:cardCornerRadius="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/item_tv_progress_bids"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@id/iv_more"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/big_black"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/item_message_second_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_tv_progress_bids"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@id/iv_more"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_tv_progress_newspaper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="填报人："
                android:textColor="@color/big_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_tv_progress_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="日期："
                android:textColor="@color/big_black"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_tv_standard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_message_second_layout"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@id/iv_more"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="标准："
            android:textColor="@color/new_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_tv_progress_remarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_tv_standard"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="6dp"
            android:layout_toLeftOf="@id/iv_more"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="备注："
            android:textColor="@color/new_black"
            android:textSize="14sp" />

        <!-- line -->

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:src="@drawable/ic_more" />

    </RelativeLayout>

</android.support.v7.widget.CardView>