<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_main_search_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <!-- 搜索栏 -->
    <RelativeLayout
        android:id="@+id/layout_main_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_rectangle_white"
        android:visibility="gone">


        <ImageButton
            android:id="@+id/img_home_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:padding="10dp"
            android:src="@drawable/scan" />

        <View
            android:id="@+id/line_home_search"
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_home_scan"
            android:background="@color/line" />

        <com.zgdj.djframe.view.SearchView
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/img_home_message"
            android:layout_toRightOf="@+id/line_home_search"
            android:background="@drawable/search_bg"
            android:drawableLeft="@drawable/v1_e_search"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/v1_delete"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:hint="搜索"
            android:imeOptions="actionSearch"
            android:maxLines="1"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="#1c2627"
            android:textColorHint="#a1a2a4"
            android:textCursorDrawable="@drawable/edit_cursor_style_black"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/img_home_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:padding="10dp"
            android:src="@drawable/message" />
    </RelativeLayout>

    <!-- 图表Tab -->

    <!--<android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_project_progress_tab_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_2"
        android:visibility="gone" />-->

    <include
        android:id="@+id/layout_home_tab_1"
        layout="@layout/layout_home_tab"
        android:visibility="gone" />


</LinearLayout>